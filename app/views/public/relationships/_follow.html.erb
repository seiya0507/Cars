<% if current_user.following?(user) %>
  <%= link_to "フォローを解除する", user_relationships_path(user.id), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
<% else %>
  <%= link_to "フォローする", user_relationships_path(user.id), method: :post, remote: true, class: "btn btn-sm btn-info" %>
<% end %>