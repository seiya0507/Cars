<%= stylesheet_link_tag "car_user", :media => "all" %>
<div id="loading">
  <div class="spinner">
    <p class="loading-txt">Loading...</p>
  </div>
</div>
<div class="container px-5 px-sm-0">
  <div class="row pt-5">
    <div class="col-md-10 offset-md-1">
      <%= form_with model: @user, url: new_user_session_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <h2><i>登録ユーザーログイン</i></h2>
        <p></p>
        <div class="row">
          <div class="col-12 col-md-4"><%= f.label :email, "メールアドレス" %></div>
          <div class="col-12 col-md-8"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
        </div>
        <p></p>
        <div class="row">
          <div class="col-12 col-md-4"><%= f.label :password, "パスワード" %></div>
          <div class="col-12 col-md-8"><%= f.password_field :password, autocomplete: "current-password" %></div>
        </div>
        <p></p>
        <div class="row">
        </div>
        <div class="row">
        </div>
        <div class="row">
          <div class="col-12 col-md-4">
          <% if devise_mapping.rememberable? %>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col-12"><%= f.submit "ログインする", data: {"turbolinks" => false}, class:"btn btn-sm btn-success" %></div>
        </div>
        <div class="row">
        </div>
        <div class="row">
        </div>
        <p></p>
        <%= render "public/shared/links" %>
      <% end %>
    </div>
  </div>
</div>





















