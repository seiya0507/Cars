<div class="container px-5 px-sm-0">
<% unless current_user.freeze %>
  <div class="row pt-3">
    <div class="col-md-3">
      <%= render 'public/users/users_error', user: @user %>
      <%= render 'error', new_car: @new_car %>
      <%= render 'public/users/information', user: @car_user %>
      <%= render 'create_form', car: @new_car %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>レビュー投稿詳細</h2>
      <div class="row">
        <div class="card w-80 mx-auto mt-5 shadow text-center">
          <p></p>
          <div>
            <% if @car.image.attached? %>
              <%= image_tag @car.image, size: "400x400", class:"card-img-top mt-3" %>
            <% else %>
              <%= image_tag 'no_image_car', size: "500x400", class:"card-img-top mt-3" %>
            <% end %>
          </div>
          <div class="car-wrap">
            <p></p>
            <div class="car-title">
              <%= @car.title %>
            </div>
            <p></p>
            <div class="car-body">
              <%= @car.body %>
            </div>
            <p></p>
            <div class="car-tag">
              <% @car.tags.each do |tag| %>
                <%= tag.name %>
              <% end %>
            </div>
            <p></p>
            <div id="star-rate<%= @car.id%>">
              <script>
                $('#star-rate<%= @car.id %>').empty();
                $('#star-rate<%= @car.id%>').raty({
                 size      : 36,
                 starOff   : '<%= asset_path('star-off.png') %>',
                 starOn    : '<%= asset_path('star-on.png') %>',
                 half      : false,
                 readOnly: true,
                 score: <%= @car.star %>,
                });
              </script>
            </div>
            <p></p>
            <div class="car-date">
              投稿日：<%= @car.created_at.strftime('%Y/%m/%d') %>
            </div>
            <p></p>
            <div id="favorite_buttons_<%= @car.id %>">
              <%= render "public/favorites/favorites-btn", car: @car %>
            </div>
            <p></p>
            <div class="comments-count">
              <%= render 'public/comments/counter', car: @car %>
            </div>
            <p></p>
            <div class="car-btn">
              <% if @car.user == current_user %>
                <%= link_to "編集する", edit_car_path(@car.id), class:"btn btn-sm btn-info" %> |
                <%= link_to "削除する", car_path(@car.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-sm btn-danger" %>
              <% end %>
            </div>
            <p></p>
          </div>
        </div>
      </div>
      <div class="row pt-5">
        <h4>コメント一覧</h4>
        <div class="comments">
          <%= render 'public/comments/index', car: @car, comment: @comment %>
        </div>
        <div class="row pt-5">
         <% unless @user.name == "guestuser" %>
           <%= render 'public/comments/comment_form', car: @car, comment: @comment %>
         <% end %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <h2>本アカウントは凍結中です。</h2>
<% end %>
</div>
