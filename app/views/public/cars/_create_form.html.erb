<div class="row pt-5">
  <div class="card px-3">
    <h4 class="mt-3">レビュー投稿フォーム</h4>
    <%= form_with model: @new_car do |f| %>
    <div class="form-group">
      <label for="car_image">レビュー画像</label>
      <%= f.file_field :image, accept: "image/*" %>
    </div>
    <div class="form-group">
      <label for="car_title">レビュータイトル</label>
      <%= f.text_field :title, class:"form-control car_title" %>
    </div>
    <div class="form-group">
      <label for="car_body">レビュー内容</label>
      <%= f.text_field :body, class:"form-control car_body" %>
    </div>
    <div class="check_box">
      <p>タグ</p>
      <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
      <div>
        <%= tag.label do %>
          <%= tag.check_box %>
          <%= tag.text %>
        <% end %>
      </div>
      <% end %>
    </div>
    <p></p>
    <p>評価</p>
    <div class="form-group row" id="star">
      <%= f.label :star, "評価", class:"col-md-3 col-form-label" %>
      <%= f.hidden_field :star, id: :review_star %>
    </div>
    <script>
      $('#star').empty();
      $('#star').raty({
       size     : 36,
       starOff:  '<%= asset_path('star-off.png') %>',
       starOn : '<%= asset_path('star-on.png') %>',
       scoreName: 'car[star]',
      half: false,
      });
    </script>
    <div class="form-group">
      <%= f.submit '投稿する', class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>