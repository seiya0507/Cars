<div class="row">
 <div>
   <p></p>
  <h4 class="text-center">ユーザー情報</h4>
  <div class="text-center">
  <%= image_tag user.get_profile_image(100,100), class:"mt-3 rounded-circle"; %>
  </div>
  <table class="table table-hover">
  <tbody>
    <tr></tr>
    <tr>
      <th>ユーザー名</th>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <th>マイカー</th>
      <td><%= user.introduction %></td>
    </tr>
    <tr id="user_id_<%= user.id %>">
      <th>フォロー数</th>
      <th class="follow_count" id="follow_count_<%= user.id %>">
        <%= render 'public/relationships/follow_counter', user: user %>
      </th>
    </tr>
    <tr id="user_id_<%= user.id %>">
      <th>フォロワー数</th>
      <th class="follower_count" id="follower_count_<%= user.id %>">
        <%= render 'public/relationships/follower_counter', user: user %>
      </th>
    </tr>
  </tbody>
  </table>
  <div class="row">
   <% if user == current_user %>
    <%= link_to "ユーザー情報編集", edit_user_path(user.id), class: "btn btn-outline-secondary btn-block" %>
   <% else %>
    <div id="follow_<%= user.id %>">
      <%= render 'public/relationships/follow', user: user %>
    </div>
   <% end %>
  </div>
 </div>
</div>