<div class="container px-5 px-sm-0">
<% unless current_user.freeze %>
  <div class="row pt-3">
    <div class="col-md-3">
      <%= render 'users_error', user: @user %>
      <%= render 'public/cars/error', new_car: @new_car %>
      <%= render 'information', user: @user %>
      <%= render 'public/cars/create_form', car: @new_car %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2><%= @user.name %>さんのレビュー投稿一覧 (新着順)</h2>
      <div class="row pt-3">
        <table class="table table-hover">
          <tr>
          <% @cars.each do |car| %>
            <td>
              <% if car.image.attached? %>
                <%= link_to car_path(car.id) do %>
                  <%= image_tag car.image, size: "100x100" %>
                <% end %>
              <% else %>
                <%= link_to car_path(car.id) do %>
                  <%= image_tag asset_path('no_image_car.jpg'), size: "100x100" %>
                <% end %>
              <% end %>
            </td>
            <td><%= link_to car.title, car_path(car.id) %></td>
            <td><%= car.body %></td>
            <td>
              <% car.tags.each do |tag| %>
                <%= tag.name %>
              <% end %>
            </td>
            <td>
              <div id="star-rate<%= car.id %>">
                <script>
                  $('#star-rate<%= car.id %>').empty();
                  $('#star-rate<%= car.id%>').raty({
                   size      : 36,
                   starOff   : '<%= asset_path('star-off.png') %>',
                   starOn    : '<%= asset_path('star-on.png') %>',
                   half      : false,
                   readOnly: true,
                   score: <%= car.star %>,
                  });
                </script>
              </div>
            </td>
            <td>投稿日：<%= car.created_at.strftime('%Y/%m/%d') %></td>
            <td id="favorite_buttons_<%= car.id %>">
              <%= render 'public/favorites/favorites-btn', car: car %>
            </td>
            <td>
              <p><%= link_to "#{car.comments.count} コメント", car_path(car.id) %></p>
            </td>
            <td><%= link_to "レビュー詳細", car_path(car.id), class:"btn btn-sm btn-info" %></td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
<% else %>
  <h2>本アカウントは凍結中です。</h2>
<% end %>
</div>
<%= paginate @cars %>
