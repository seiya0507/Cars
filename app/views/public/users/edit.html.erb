<div class="container">
  <div class="row pt-3">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= render 'users_error', user: @user %>
      <h2>ユーザー登録情報編集</h2>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="user_name">ユーザー名</label>
          <%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "名前", class:"form-control name" %>
        </div>
        <div class="forrm-group">
          <label for="user_image">プロフィール画像</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "form-control-file user_image" %>
        </div>
        <p></p>
        <div class="form-group">
          <label for="user_introduction">マイカー</label>
          <%= f.text_area :introduction, placeholder: "  マイカー", class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit "更新", class: "btn btn-success" %>
          <p></p>
          <%= link_to "退会する", user_users_unsubscribe_path(@user.id), class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
