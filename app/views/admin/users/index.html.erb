<div class="container px-5 px-sm-0">
  <div class="row pt-3">
    <div class="col-md-10 offset-md-1">
      <h2>登録ユーザー管理</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th><span style="font-size:13px;">ユーザー名</span></th>
            <th><span style="font-size:15px;">マイカー</span></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tbody>
          <tr>
            <td>
              <%= link_to admin_user_path(user.id) do %>
                <%= image_tag user.get_profile_image(100,100) %>
              <% end %>
            </td>
            <td><%= link_to user.name, admin_user_path(user.id) %></td>
            <td><%= user.introduction %></td>
            <td>フォロー数：<%= user.followings.count %></td>
            <td>フォロワー数：<%= user.followers.count %></td>
            <td><%= link_to "ユーザー詳細へ", admin_user_path(user.id), class:"btn btn-sm btn-success" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
