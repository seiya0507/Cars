<div class="container px-5 px-sm-0">
  <div class="row pt-3">
    <div class="col-md-12">
      <h2>< 登録ユーザー管理 ></h2>
      <p></p>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th><span style="font-size:13px;">ユーザー名</span></th>
            <th><span style="font-size:15px;">マイカー</span></th>
            <th><%= link_to "凍結中ユーザー一覧", admin_freezes_path, class:"btn btn-sm btn-info" %></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tbody>
          <tr>
            <td>
              <%= link_to admin_user_path(user.id) do %>
                <%= image_tag user.get_profile_image(100,100), class:"mt-3 rounded-circle" %>
              <% end %>
            </td>
            <td><%= link_to user.name, admin_user_path(user.id) %></td>
            <td><%= user.introduction %></td>
            <td>フォロー数：<%= user.followings.count %></td>
            <td>フォロワー数：<%= user.followers.count %></td>
            <td>登録日：<%= user.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= link_to "ユーザー詳細へ", admin_user_path(user.id), class:"btn btn-sm btn-success" %></td>
            <td>
              <% if user.freeze %>
                <%= link_to "凍結解除", admin_user_freeze_path(user), method: :delete, class:"btn btn-sm btn-info" %>
              <% else %>
                <%= link_to "凍結する", admin_user_freeze_path(user), method: :post, class: "btn btn-sm btn-danger" %>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
