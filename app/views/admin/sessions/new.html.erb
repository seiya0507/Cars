<div class="container px-5 px-sm-0">
  <div class="row pt-5">
    <div class="col-md-10 offset-md-1">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h2>< 管理者ログイン ></h2>
        <p></p>
        <table>
          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td><%= f.label :password, "パスワード" %></td>
            <td><%= f.password_field :password, autocomplete: "current-password" %></td>
          </tr>
          <tr>
            <td></td>
          </tr>
          <tr>
            <td></td>
          </tr>
          <tr>
            <td>
              <% if devise_mapping.rememberable? %>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, "ログインを記憶する" %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td></td>
          </tr>
          <tr>
            <td><%= f.submit "ログイン", class:"btn btn-sm btn-success" %></td>
          </tr>
          <tr>
            <td><%= render "admin/shared/links" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>