<%= stylesheet_link_tag "car_user", :media => "all" %>
<div id="loading">
  <div class="spinner">
    <p class="loading-txt">Loading...</p>
  </div>
</div>
<div class="container px-5 px-sm-0">
  <div class="row pt-3">
    <div class="col-md-10">
      <h2><i>凍結中ユーザー一覧</i></h2>
      <p></p>
      <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th><span style="font-size:13px;">ユーザー名</span></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td><%= user.name %></td>
            <td>
              <%= link_to "凍結解除", admin_user_freeze_path(user), method: :delete, data: {"turbolinks" => false}, class:"btn btn-sm btn-info" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</div>
